<div class="pb-10 min-h-dvh flex justify-center">
  <div class="flex-1">
    <%= render partial: 'shares/top_menu' %>

    <%= render(::BoxComponent.new(options: { class: 'p-6 mt-4' })) do %>
      <div class="space-y-8 mt-2">
        <div>
          <h1 class="text-4xl">Join Requests for <%= @room.name %></h1>
          <p class="text-stone-500">Manage users who want to join your room</p>
        </div>

        <% if @pending_requests.any? %>
          <div class="space-y-4">
            <% @pending_requests.each do |request| %>
              <div class="border border-gray-200 rounded-lg p-4" data-controller="join-request-item" data-join-request-item-id-value="<%= request.id %>">
                <div class="flex items-center justify-between">
                  <div class="flex items-center space-x-3">
                    <div class="w-10 h-10 bg-gray-300 rounded-full flex items-center justify-center">
                      <span class="text-sm font-medium text-gray-700">
                        <%= request.user.first_name.first.upcase %><%= request.user.last_name.first.upcase %>
                      </span>
                    </div>
                    <div>
                      <h3 class="font-medium text-gray-900"><%= request.user.name %></h3>
                      <p class="text-sm text-gray-500">Requested <%= time_ago_in_words(request.created_at) %> ago</p>
                    </div>
                  </div>
                  
                  <div class="flex space-x-2">
                    <button data-action="click->join-request-item#approve" 
                            class="primary-button px-4 py-2 text-sm">
                      Approve
                    </button>
                    <button data-action="click->join-request-item#reject" 
                            class="bg-gray-200 hover:bg-gray-300 text-gray-700 font-semibold py-2 px-4 rounded-md cursor-pointer text-sm">
                      Reject
                    </button>
                  </div>
                </div>
                
                <% if request.message.present? %>
                  <div class="mt-3 p-3 bg-gray-50 rounded-md">
                    <p class="text-sm text-gray-700"><%= request.message %></p>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-8">
            <p class="text-gray-500">No pending join requests</p>
          </div>
        <% end %>

        <div>
          <a href="<%= rooms_path %>" class="primary-button inline-block">Back to Rooms</a>
        </div>
      </div>
    <% end %>
  </div>
</div>
